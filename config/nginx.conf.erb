daemon off;
worker_processes 1;

events {
    worker_connections 1024;
}

http {
    include mime.types;
    default_type application/octet-stream;
    port_in_redirect off;

    server {
        listen <%= ENV["PORT"] %>;
        server_name _;
        root /app;

        location / {
            try_files $uri $uri/ /index.html;
        }
    }
}